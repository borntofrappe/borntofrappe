{% set hasContent = true %}
{% set slug = title | slug %}
{% set title = site.name + "/blog/" + slug %}
{% set description = description or "" %}
{% set staticFolder = "../../static" %}
{% set imageName = slug %}
{% set imageAlt = "Page image for a blog post on the website " + site.name + ", titled '" + title + "'" %}

{% extends "layouts/base.njk" %}

{% block style %}
  {% include "css/post.css" %}
  {% if not keywords %}
  main {
    margin-top: 2rem;
  }
  {% endif %}
{% endblock %}

{% block content %}
<header>
  <h1>{{ slug }}</h1>
  {%- if keywords %}
    <h2 class="visually-hidden">Keywords:</h2>
    <ul>
    {%- for keyword in keywords %}
      <li>
        <span class="visually-hidden">{{keyword}}</span>
        {{ icons[keyword] | safe }}
      </li>
    {% endfor -%}
    </ul>
  {% endif -%}
</header>

<main id="content">
  {{ content | safe }}
</main>
{% endblock %}