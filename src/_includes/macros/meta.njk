{%- macro meta(title, description, staticFolder) %}
    <title>{{title | replace("/", " / ")}}</title>
    <meta name="description" content="{{description}}" />

    <link rel="icon" href="{{staticFolder}}/icon.svg" />
    <link rel="icon" type="image/png" sizes="16x16" href="{{staticFolder}}/icon-16.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="{{staticFolder}}/icon-32.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="{{staticFolder}}/apple-touch-icon.png" />

    <meta property="og:title" content="{{title}}" />
    <meta property="og:description" content="{{description}}" />
    <meta property="og:locale" content="en_US" />
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="borntofrappe" />
{% endmacro -%}